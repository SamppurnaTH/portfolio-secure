{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // ✅ Enable absolute imports
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // ✅ Include Next.js & Node types
    "types": [
      "node",
      "next",
      "next/types/global"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/**/*",
    "lib/**/*",
    "next-env.d.ts"
    // Removed: ".next/types/**/*.ts"
    ,
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
